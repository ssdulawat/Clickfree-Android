<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/download_option_description_padding">

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="@dimen/arrow_image_width"
        android:layout_height="wrap_content"
        android:contentDescription="@string/plug_text"
        android:padding="@dimen/contact_us_button_margin_top"
        android:src="@drawable/ic_arrow"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/question_title"
        android:layout_width="@dimen/question_title_width"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/contact_us_button_margin_top"
        android:paddingStart="@dimen/contact_us_button_margin_top"
        android:paddingRight="@dimen/zero"
        android:paddingEnd="@dimen/zero"
        android:paddingBottom="@dimen/download_option_description_padding"
        android:text="@string/frequent_question_first_title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/frequent_question_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/underline_height"
        android:background="@color/grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_title" />

</androidx.constraintlayout.widget.ConstraintLayout>